# Multi-Model Configuration

# Server Configuration
SERVER_HOST=0.0.0.0
SERVER_PORT=8080
SERVER_MODE=release

# Video Model Selection
# Options: ltx-video, modelscope, zeroscope, svd, svd-xt
VIDEO_MODEL=modelscope
# Default: modelscope (works on 4GB GPU!)

# Model Configurations
# ─────────────────────────────────────────────────────────────
# ltx-video:   Lightricks/LTX-Video (12GB+ VRAM, best quality)
# modelscope:  damo-vilab/text-to-video-ms-1.7b (4GB+, good quality)
# zeroscope:   cerspense/zeroscope_v2_576w (4GB+, 576x320)
# svd:         stabilityai/stable-video-diffusion-img2vid (12GB+)
# svd-xt:      stabilityai/stable-video-diffusion-img2vid-xt (12GB+)

MODEL_CACHE_DIR=./models

# Hugging Face Configuration
HUGGINGFACE_TOKEN=your_hf_token_here
HUGGINGFACE_API_URL=https://huggingface.co

# GPU Configuration
ENABLE_GPU=true
GPU_DEVICE_ID=0
GPU_MEMORY_FRACTION=0.9

# Python Backend Configuration
PYTHON_BACKEND_URL=http://localhost:5000
PYTHON_BACKEND_ENABLED=true

# Model Parameters (defaults, can override per request)
MAX_FRAMES=64
DEFAULT_FPS=24
DEFAULT_WIDTH=512
DEFAULT_HEIGHT=512
MAX_VIDEO_DURATION=10

# Processing Configuration
MAX_CONCURRENT_REQUESTS=2
REQUEST_TIMEOUT=300
UPLOAD_MAX_SIZE=100MB

# Memory Optimization
LOW_MEMORY_MODE=false
# Set to true for 4GB-8GB GPUs

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# ═══════════════════════════════════════════════════════════
# QUICK CONFIGS BY GPU SIZE
# ═══════════════════════════════════════════════════════════

# 4GB GPU (NVIDIA/AMD):
# VIDEO_MODEL=modelscope
# LOW_MEMORY_MODE=true
# MAX_FRAMES=32
# DEFAULT_WIDTH=256
# DEFAULT_HEIGHT=256

# 8GB GPU:
# VIDEO_MODEL=modelscope
# LOW_MEMORY_MODE=true
# MAX_FRAMES=64
# DEFAULT_WIDTH=512
# DEFAULT_HEIGHT=512

# 12GB+ GPU:
# VIDEO_MODEL=ltx-video
# LOW_MEMORY_MODE=false
# MAX_FRAMES=64
# DEFAULT_WIDTH=512
# DEFAULT_HEIGHT=512

# 16GB+ GPU:
# VIDEO_MODEL=ltx-video
# LOW_MEMORY_MODE=false
# MAX_FRAMES=128
# DEFAULT_WIDTH=768
# DEFAULT_HEIGHT=768

# CPU Mode:
# ENABLE_GPU=false
# VIDEO_MODEL=modelscope
# MAX_FRAMES=16
# DEFAULT_WIDTH=256
# DEFAULT_HEIGHT=256
