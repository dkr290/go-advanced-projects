# Low Memory GPU Configuration (4GB-8GB)
# WARNING: LTX-Video may still fail with 4GB. Consider using CPU or smaller models.

# Server Configuration
SERVER_HOST=0.0.0.0
SERVER_PORT=8080
SERVER_MODE=release

# Model Configuration - CRITICAL FOR LOW MEMORY
MODEL_NAME=Wan2.1
HUGGINGFACE_MODEL_ID=Lightricks/LTX-Video
MODEL_CACHE_DIR=./models
USE_HUGGINGFACE=true
USE_OLLAMA=false

# Hugging Face Configuration
HUGGINGFACE_TOKEN=your_hf_token_here
HUGGINGFACE_API_URL=https://huggingface.co

# GPU Configuration - OPTIMIZED FOR LOW MEMORY
ENABLE_GPU=true
GPU_DEVICE_ID=0
GPU_MEMORY_FRACTION=0.95
# Use all available memory

# Python Backend Configuration
PYTHON_BACKEND_URL=http://localhost:5000
PYTHON_BACKEND_ENABLED=true

# Model Parameters - REDUCED FOR LOW MEMORY
MAX_FRAMES=32
# Reduced from 128 - IMPORTANT!
DEFAULT_FPS=24
DEFAULT_WIDTH=256
# Reduced from 512 - CRITICAL!
DEFAULT_HEIGHT=256
# Reduced from 512 - CRITICAL!
MAX_VIDEO_DURATION=5
# Reduced from 10

# Processing Configuration - CONSERVATIVE
MAX_CONCURRENT_REQUESTS=1
# Only 1 at a time!
REQUEST_TIMEOUT=600
# Longer timeout for slower processing
UPLOAD_MAX_SIZE=50MB

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# LOW MEMORY MODE
LOW_MEMORY_MODE=true
ENABLE_ATTENTION_SLICING=true
ENABLE_VAE_SLICING=true
