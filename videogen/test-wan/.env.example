# Server Configuration
SERVER_HOST=0.0.0.0
SERVER_PORT=8080
SERVER_MODE=release

# Model Configuration
MODEL_NAME=Wan2.1
HUGGINGFACE_MODEL_ID=Lightricks/LTX-Video
MODEL_CACHE_DIR=./models
USE_HUGGINGFACE=true
USE_OLLAMA=false

# Hugging Face Configuration
HUGGINGFACE_TOKEN=your_hf_token_here
HUGGINGFACE_API_URL=https://huggingface.co

# GPU Configuration
ENABLE_GPU=true
GPU_DEVICE_ID=0
GPU_MEMORY_FRACTION=0.9

# Python Backend Configuration
PYTHON_BACKEND_URL=http://localhost:5000
PYTHON_BACKEND_ENABLED=true

# Model Parameters
MAX_FRAMES=128
DEFAULT_FPS=24
DEFAULT_WIDTH=512
DEFAULT_HEIGHT=512
MAX_VIDEO_DURATION=10

# Processing Configuration
MAX_CONCURRENT_REQUESTS=2
REQUEST_TIMEOUT=300
UPLOAD_MAX_SIZE=100MB

# Logging
LOG_LEVEL=info
LOG_FORMAT=json
