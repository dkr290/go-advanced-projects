package layout

templ Navigation(nav bool) {
<!DOCTYPE html>
<html lang="en">

<head>
	<meta charset="UTF-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1" />
	<title>Show Cars</title>
	<link rel="stylesheet" href="/views/css/bulma.min.css" />
